<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/meal_imageview"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tartaleta" />

    <TextView
        android:id="@+id/number_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meal_imageview"
        tools:text="Nº6: Tartaleta" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_description"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_name_label"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque lacinia mauris at augue tempor cursus. Quisque eu porta eros, et fermentum libero. Ut id justo ante. Maecenas fermentum cursus leo in consectetur. Nam varius leo velit, quis semper ex porta a. Ut eu arcu dolor. " />


    <TextView
        android:id="@+id/price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_price"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_price"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_label"
        tools:text="10,50 €" />

    <TextView
        android:id="@+id/alergen_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_alergens"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_alergens"

        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_label"
        android:text="Alérgenos:" />

    <ImageView
        android:id="@+id/icon_egg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/alergen_label"
        app:layout_constraintTop_toTopOf="@+id/alergen_label"
        app:srcCompat="@drawable/egg" />

    <ImageView
        android:id="@+id/icon_lactose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/icon_egg"
        app:layout_constraintTop_toTopOf="@+id/alergen_label"
        app:srcCompat="@drawable/lactose" />

    <ImageView
        android:id="@+id/icon_gluten"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/icon_lactose"
        app:layout_constraintTop_toTopOf="@+id/alergen_label"
        app:srcCompat="@drawable/gluten" />

    <ImageView
        android:id="@+id/icon_soy"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/icon_gluten"
        app:layout_constraintTop_toTopOf="@+id/alergen_label"
        app:srcCompat="@drawable/soyb" />

    <ImageView
        android:id="@+id/icon_shrimp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/icon_soy"
        app:layout_constraintTop_toTopOf="@+id/alergen_label"
        app:srcCompat="@drawable/shrimp" />
</android.support.constraint.ConstraintLayout>